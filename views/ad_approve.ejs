ALL CHECKOUT-REQ : 
<br><br>
    <table>
        <%
            data.forEach(function(item) {
        %>    
       <tr>
            <td>
               <table>
                <td>
                
                    Title : <%=item.title%><br>
                    User : <%=item.user_id%>
                
                </td>
                <table>
                <td>
                <form action="/approverequests" method="POST">    
                <input type="submit" value="approve">
                <input type="text" name="reqid" value= '<%= item.id %>' style="display:none;">
                <input type="text" name="title" value= '<%= item.title %>' style="display:none;">
                </form>
                </td>
                <td>
                <form action="/denyrequests" method="POST">
                    <input type="submit" value="deny">
                    <input type="text" name="reqid" value= '<%= item.id %>' style="display:none;">
                    <input type="text" name="title" value= '<%= item.title %>' style="display:none;">
                </form>
                </table>
                </td>
            </table>
            </td>
       </tr>
       <% }) %>
    </table>
